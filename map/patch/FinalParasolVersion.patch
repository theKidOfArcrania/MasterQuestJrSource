#new:Function $DrawMenuBox
{
ADDIU sp, sp, -68
%%%%%%%%%%%%%%%%%%%%
SW  R0, 0010 (SP)
SW  R0, 0020 (SP)
SW  R0, 0024 (SP)
SW  R0, 0028 (SP)
SW  R0, 002C (SP)
SW  R0, 0030 (SP)
SW  R0, 0034 (SP)
SW  R0, 0038 (SP)
SW  R0, 003C (SP)
SW  R0, 0040 (SP)
SW	R0, 004C (SP)
%%%%%%%%%%%%%%%%%%%%
SW a0, 0050 (sp)
SW a1, 0054 (sp)
SW a2, 0058 (sp)
SW a3, 005C (sp)
SW ra, 0060 (sp)
LIO a0, 00FF %opacity
SW a0, 001C (sp)
ORI a0, r0, 0080 %width of box
SW a0, 0014 (sp) %store width
%ORI a0, r0, 007C %length of box
LAW a0, $AmountOfPointersToLoad
ORI a1, r0, 000B
MULT a0, a1
MFLO a1
ADDIU A0, A0, FFFE %add extra space if only a few items
BLEZL  A0, .addLowerSpace
	ADDIU A1, A1, 0005
.addLowerSpace
ADDIU a1, a1, 0005
SW a1, 0018 (sp) %store length
ORI a0, r0, 0000
ORI a1, r0, 0004 %style
ORI a2, r0, 000C %x pos
ORI a3, r0, 0035 %y pos
JAL ~Func:draw_box
NOP
LW a0, 0050 (sp)
LW a1, 0054 (sp)
LW a2, 0058 (sp)
LW a3, 005C (sp)
LW ra, 0060 (sp)
JR RA
ADDIU sp, sp, 68
}


