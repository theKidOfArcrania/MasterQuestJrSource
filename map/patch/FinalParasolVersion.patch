#new:Function $GenerateDynamicWarpMenu
{
PUSH A0, A1, t0, t1, t2, t3, t4, s0, s1, s2, s3, s4, s5, s6, S7
LIO s0, $WarpsValueTable
LIO s1, $TravelTextPointers
LIO s2, $DynamicallyGeneratedWarpValues
LIO s3, $DynamicallyGeneratedTextPointers
LIO s4, 800DBD64 %Map Flags address
LIO s5, $ANDBitsTable1
LIO s6, 40000000 %used to know when the end of table 1 (contains Yoshi's Village item)
LIO S7, FFFFFFFF %indicates no flag check in and table [slot always active]
%ADDITIONAL CONDITIONS:
%Byte 800DBD7B (GameByte 00B) is WarpLock.
% == 0: normal parasol operation.
% == FF: can't warp now.
% == some positive number: only display warping pointer for that one. Skips map flag check. 
LAB		A1, 800DBD7B   %load WarpLock
BGEZ 	A1, .loop  %special lock is handled in loop
ADDIU	A0, R0, 1	   %setting A0 to 1 to count which location we're on
%general warp lock
LIA 	T3, $NoWarpText
BEQ		R0, R0, .end
SW	 	T3, 0 (S3)
%only one value will be displayed.
.loop % i think
LW t0, 0000 (s4) %load first 4 bytes from map flags address
LW t4, 0000 (s5) %load value from AND table
BEQ T4, S7, .alwaysactive %if value loaded is FFFFFFFF, we don't need to check if we've visited this location.
NOP
BEQ t4, s6, .changeregisterS5 %if value loaded is 80000000 (end of ANDI table 1)
NOP
BEQ t4, r0, .end %if end of AND table, exit
NOP
.afterchangingS5
AND t1, t0, t4 %if bit is 1 in both t0, t4
BEQ t1, r0, .notactive
NOP
.alwaysActive
%now we check for special lock
LW t2, 0000 (s0) %load pointer from $WarpsValueTable
BLEZ	A1, .normalWarpType
LW t3, 0000 (s1) %load pointer from $TravelTextPointers
%if we're here: special lock instead
BEQ		A0, A1, .normalWarpType %if this is the one warp-allowed destination, redirect to normal 
NOP
ADDIU	S1, S1, 38 		%adds 56`/ 4 = 14 places forward to get 'disabled' string value
LW 		t3, 0000 (s1) 	%load pointer from $TravelTextPointers
ADDIU	S1, S1, FFC8  	%reverses addition
CLEAR	T2				%also clear warp dest value
.normalWarpType
SW t2, 0000 (s2) %save pointer to $DynamicallyGeneratedWarpValues
SW t3, 0000 (s3) %save pointer to $DynamicallyGeneratedTextPointers
ADDIU s2, s2, 0004
%BEQ r0, r0, .loop
ADDIU s3, s3, 0004
.notactive
ADDIU A0, A0, 1    %don't forget to keep track of which item in the table we're pointing to!
ADDIU s0, s0, 0004 %next pointer in WarpValuesTable
ADDIU s1, s1, 0004 %next pointer in TravelTextPointers
BEQ r0, r0, .loop
ADDIU s5, s5, 0004 %next pointer in ANDBitsTable1
.changeregisterS5
LIO s5, $ANDBitsTable2
ADDIU s5, s5, FFFC
BEQ r0, r0, .afterchangingS5
ADDIU s4, s4, 0004
.end
POP A0, A1, t0, t1, t2, t3, t4, s0, s1, s2, s3, s4, s5, s6, S7
JR RA
NOP
}

