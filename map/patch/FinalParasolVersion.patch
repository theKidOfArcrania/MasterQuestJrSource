#new:Function $ClearDynamicMenus
{
PUSH s0, s1, v0, v1
LIO s0, $DynamicallyGeneratedWarpValues
LIO s1, $DynamicallyGeneratedTextPointers
ORI v0, r0, 000B
ORI v1, r0, 0001
.loop
SW r0, 0000 (s0)
SW r0, 0000 (s1)
ADDIU s0, s0, 0004
ADDIU s1, s1, 0004
ADDIU v1, v1, 0001 %counter, once it hits 11 (0x0B) exit
BEQ v0, v1, .exit
NOP
BEQ r0, r0, .loop
NOP
.exit
POP s0, s1, v0, v1
JR RA
NOP
}


